<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.corelibrary.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/modify_psw"
        app:lefticon="@drawable/btn_back"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/font_color_two">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_head"
            android:layout_marginTop="@dimen/dd_dimen_50px"
            android:layout_marginBottom="@dimen/dd_dimen_40px"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:background="@color/font_color_four"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:layout_below="@id/iv_icon">
            <TextView
                android:layout_width="@dimen/dd_dimen_100px"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textSize="@dimen/dd_dimen_24px"
                android:textColor="@color/font_color_one"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_input_username"
                android:background="@null"
                android:textSize="@dimen/dd_dimen_24px"
                android:textColor="@color/font_color_one"
                android:singleLine="true"/>
        </LinearLayout>

        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            style="@style/line_hor1"
            android:layout_below="@id/ll_username"/>

        <LinearLayout
            android:id="@+id/ll_verify_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:background="@color/font_color_four"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:layout_below="@id/v_line1">
            <TextView
                android:layout_width="@dimen/dd_dimen_100px"
                android:layout_height="wrap_content"
                android:text="@string/verify_code"
                android:textSize="@dimen/dd_dimen_24px"
                android:textColor="@color/font_color_one"/>

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_input_verify_code"
                android:background="@null"
                android:textSize="@dimen/dd_dimen_24px"
                android:textColor="@color/font_color_one"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_verify_code"
                android:textSize="@dimen/dd_dimen_24px"
                android:textColor="@color/font_color_three"
                android:singleLine="true"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:hint="@string/hint_input_new_psw"
            android:background="@color/font_color_four"
            android:textSize="@dimen/dd_dimen_24px"
            android:textColor="@color/font_color_one"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_below="@id/ll_verify_code"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_50px"/>

        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            style="@style/line_hor1"
            android:layout_below="@id/et_new_psw"/>

        <EditText
            android:id="@+id/et_re_new_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:hint="@string/hint_re_input_new_psw"
            android:background="@color/font_color_four"
            android:textSize="@dimen/dd_dimen_24px"
            android:textColor="@color/font_color_one"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_below="@id/v_line2"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"/>


        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_88px"
            android:text="@string/save"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:gravity="center"
            android:textSize="@dimen/dd_dimen_24px"
            android:textColor="@color/font_color_four"
            android:background="@drawable/bg_btn"
            android:layout_below="@id/et_re_new_psw"
            android:layout_marginTop="@dimen/dd_dimen_60px"/>

    </RelativeLayout>

</LinearLayout>