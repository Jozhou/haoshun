<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.corelibrary.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/modify_nick"
        app:lefticon="@drawable/btn_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/font_color_two"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_nick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:background="@color/font_color_four"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px">

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_input_nickname"
                android:background="@null"
                android:textSize="@dimen/font_size_three"
                android:textColor="@color/font_color_one"
                android:singleLine="true"
                android:layout_marginRight="@dimen/dd_dimen_30px"/>

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_clear"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            style="@style/line_hor2"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_88px"
            android:text="@string/save"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:gravity="center"
            android:textSize="@dimen/dd_dimen_24px"
            android:textColor="@color/font_color_four"
            android:background="@drawable/bg_btn"
            android:layout_marginTop="@dimen/dd_dimen_60px"/>

    </LinearLayout>

</LinearLayout>